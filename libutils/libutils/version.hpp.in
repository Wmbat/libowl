#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
// 
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
// 
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
// 
// Version      AAAAABBBBBCCCCCDDDE
// 
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
// 
#define LIBUTILS_VERSION       $libutils.version.project_number$ULL
#define LIBUTILS_VERSION_STR   "$libutils.version.project$"
#define LIBUTILS_VERSION_ID    "$libutils.version.project_id$"
#define LIBUTILS_VERSION_FULL  "$libutils.version$"

#define LIBUTILS_VERSION_MAJOR $libutils.version.major$
#define LIBUTILS_VERSION_MINOR $libutils.version.minor$
#define LIBUTILS_VERSION_PATCH $libutils.version.patch$

#define LIBUTILS_PRE_RELEASE   $libutils.version.pre_release$

#define LIBUTILS_SNAPSHOT_SN   $libutils.version.snapshot_sn$ULL
#define LIBUTILS_SNAPSHOT_ID   "$libutils.version.snapshot_id$"
